/**index.wxss**/
.list {
  border: 1px solid #ebebeb;
  margin-bottom: 30rpx;
  background: #fff;
}
.plate{
  color: #000;
  border-bottom: 1px solid #ebebeb;
  padding:15rpx 30rpx;
  position: relative;
}
.plate image{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  right: 15rpx;
  top: 50%;
  margin-top: -20rpx;
  opacity: .2;
}
.image-wrapper{
  padding: 30rpx 30rpx 10rpx 30rpx;
}
.image-wrapper image{
  width: 200rpx;
  height: 200rpx;
}
.state-wrapper {
  padding:0 10rpx 20rpx 30rpx;
}
.state{
  font-size: 32rpx;
  padding-right: 30rpx;
  color: #000;
}
.state-warning{
  color: #ea771b;
}
.switch{
  transform: scale(0.7)
}

.motormeter{
  width: 200rpx;
  height: 200rpx;
  position: relative;
}
.motormeter image{
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.motormeter view{
  position: absolute;
  width: 100%;
  bottom: 20rpx;
  color: #000;
  text-align: center;
}
.motormeter view text{
  display: block;
  margin:auto;
  background: #fff;
  border: 1px solid #ebebeb;
  width: 80rpx;
  padding: 0;
  height: 30rpx;
  line-height: 30rpx;
}
.key {
  transform: rotate(240deg);
  transition: all .5s;
}